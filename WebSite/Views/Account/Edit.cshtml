@using Microsoft.AspNet.Identity
@model WebLib.Models.ApplicationUser
@{
    ViewBag.Title = "Edit";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset class="form-horizontal">
        <legend>Rediger bruger oplysninger</legend>
        <div class="control-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.FirstName)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.LastName)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.PhoneNumber, "Telefon nummer", new {@class = "control-label"})
            <div class="controls">
                @Html.TextBoxFor(m => m.PhoneNumber)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(m => m.EmailNotification)
            <div class="editor-field">
                @Html.EditorFor(m => m.EmailNotification)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(m => m.SMSNotification)
            <div class="editor-field">
                @Html.EditorFor(m => m.SMSNotification)
            </div>
        </div>


        <div class="form-actions no-color">
        <input type="submit" value="Opdater" class="btn"/>
        </div>
</fieldset>
}

<p>
   @Html.ActionLink("Tilbage til profil", "Profile", "Account", routeValues: new { id = User.Identity.GetUserId() }, htmlAttributes: new {title = "Detaljer"})
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
