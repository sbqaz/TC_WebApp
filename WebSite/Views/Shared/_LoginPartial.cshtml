@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar">
            <li>
                <li>
                    @Html.ActionLink(User.Identity.GetUserName(), "Profile", "Account", routeValues: new { id = User.Identity.GetUserId() }, htmlAttributes: new {title = "Detaljer"})
                </li>

            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">Log ud</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log ind", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
