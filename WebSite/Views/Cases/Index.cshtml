@using System.ComponentModel.DataAnnotations
@using System.IdentityModel.Protocols.WSTrust
@using WebLib.Models
@model IEnumerable<WebLib.Models.Case>

<div style="background:transparent !important" class="jumbotron">
    <h2>Oversigt over sager</h2>
</div>
<p>
    @Html.ActionLink("Opret ny sag", "Create")
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InstallationId.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Worker)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ErrorDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MadeRepair)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserComment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InstallationId.Name)
        </td>
        <td>

            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Worker)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ErrorDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MadeRepair)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserComment)
        </td>
        <td>
            @Html.ActionLink("Rediger", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detaljer", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
